@using OgrenciNotMvc.Models.EntityFramework
@model List<TblDersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>İşlemler</th>
    </tr>

    <tbody>
        @foreach (var ders in Model)
        {
            <tr>
                <td>@ders.Id</td>
                <td>@ders.Ad</td>
                <td>
                    <a href="/Default/Sil/@ders.Id" class="btn btn-danger">Sil</a>
                    <a href="/Default/DersGetir/@ders.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>

