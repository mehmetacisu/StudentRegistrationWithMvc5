@using OgrenciNotMvc.Models.EntityFramework
@model List<TblKulup>

@{
    ViewBag.Title = "Kulüpler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>İşlemler</th>
    </tr>

    <tbody>
        @foreach (var kulup in Model)
        {
            <tr>
                <td>@kulup.Id</td>
                <td>@kulup.Ad</td>
                <td>
                    <a href="/Kulup/Sil/@kulup.Id" class="btn btn-danger">Sil</a>
                    <a href="/Kulup/KulupGetir/@kulup.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Kulup/YeniKulup" class="btn btn-info">Yeni Kulüp Ekle</a>
